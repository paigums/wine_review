<header>Reviews for <%= link_to(@wine.name, @wine) %></header>
<ol id="reviews">
  <% @reviews.each do |review| %>
    <li>
      <span class="review"><%= pluralize(review.stars, 'star') %></span>
      <span class="user">by <%= review.name %> </span>
      <span class="date">
        <%= time_ago_in_words(review.tasted_on) %> ago
      </span>
      <span class="location">at <%= review.location %> </span>
      <p>
        &quot;<%= review.comment %>&quot;
      </p>
    </li>
  <% end %>
</ol>



<%= link_to 'Write a Review', new_wine_review_path(@wine),
        remote: true,
        data: { 'update-target' => 'review_form_container' },
        class: 'btn btn-primary' %>

<div id="review_form_container"></div>


