
<%= form_for( [ @wine, @review ] ) do |f| %>
  <%= render 'shared/validation_errors', object: @review %>

  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true, placeholder: 'Name' %><br />
  <%= f.label :stars %>  
  <% Review::STARS.each do |star| %>
    <%= f.radio_button :stars, star %> <%= star %>
  <% end %><br />
  <%= f.label :comment %><br/>
  <%= f.text_area :comment %><br/>
  <%= f.label :location %>
  <%= f.text_field :location, placeholder: 'Location' %><br />
  <%= f.label :tasted_on %>
  <%= f.date_select :tasted_on, placeholder: 'Tasted On This Date' %><br />
  <p>
    <%= f.submit %>
    <%= link_to 'Cancel', wine_reviews_path(@wine), id: 'cancel_review' %>
  </p>
<% end %>
